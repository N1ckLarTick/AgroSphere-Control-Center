<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".DeviceManagement">

    <TextView
        android:padding="8dp"
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_name"
        android:textSize="20sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:padding="8dp"
        android:id="@+id/device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="@string/input_type"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/device_name" />

    <TextView
        android:padding="8dp"
        android:id="@+id/device_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="@string/input_pin"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/device_type" />


    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"

        app:layout_constraintTop_toBottomOf="@id/device_pin" />

    <TextView
        android:id="@+id/btReadings"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="168dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"/>
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вывести"

        app:layout_constraintTop_toBottomOf="@id/btReadings" />
    <Button
        android:id="@+id/btnConn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить пакет данных"

        app:layout_constraintTop_toBottomOf="@id/btnConnect" />
</androidx.constraintlayout.widget.ConstraintLayout>